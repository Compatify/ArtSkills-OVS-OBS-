    <script>
        // Data for products, including quantity and unit cost for pricing calculation
        const rawProductData = [
            { name: "Wood Round, 9.75x7.75x0.5\"", quantity: 222528, unitCost: 1.07, category: "Craft Surfaces" },
            { name: "Acrylic Paint Wheel, Acrylic, Box, 30ct", quantity: 16400, unitCost: 6.05, category: "Paint" },
            { name: "CYO, Castle/Ice Cream Truck, Assortment", quantity: 10569, unitCost: 8.58, category: "Art Activity" },
            { name: "Wood Round, Natural, 1 ct", quantity: 54000, unitCost: 1.59, category: "Craft Surfaces" },
            { name: "Hot Glue Gun", quantity: 27648, unitCost: 2.08, category: "Adhesives" },
            { name: "M&C, Stick & Stamp, Celebration, 33-Piece", quantity: 16796, unitCost: 3.23, category: "Art Activity" },
            { name: "Paint Brushes, Foam, 48ct", quantity: 7770, unitCost: 5.47, category: "Brushes" },
            { name: "Acrylic Paint, with palette wells, 16 ct", quantity: 20688, unitCost: 1.99, category: "Paint" },
            { name: "Canvas Boards", quantity: 41688, unitCost: 0.96, category: "Canvas" },
            { name: "Wood Plaques, 9x12, 3ct", quantity: 6860, unitCost: 5.48, category: "Craft Surfaces" },
            { name: "Premium Acrylic Paint, Acrylic, 18ct", quantity: 4712, unitCost: 7.98, category: "Paint" },
            { name: "Framed Sign, Wood, 8x10\"", quantity: 28800, unitCost: 1.28, category: "Craft Surfaces" },
            { name: "Slinging Chicken Game, FSC Mix, FSC Cert. Code: SGSCH-COC-000549, Product Classification - P3.2", quantity: 47544, unitCost: 0.75, category: "Novelty" },
            { name: "Cardstock, Pastel, 40 ct", quantity: 23928, unitCost: 1.18, category: "Paper" },
            { name: "Canvas Panels, 2 ct, 11x14", quantity: 22824, unitCost: 1.21, category: "Canvas" },
            { name: "Invisiguide Foam Board, White, 20x28, 2ct", quantity: 10728, unitCost: 2.57, category: "Board" },
            { name: "Markers, Brush Tip, 8 ct.", quantity: 24120, unitCost: 1.14, category: "Markers" },
            { name: "Fabric Scissors", quantity: 26784, unitCost: 0.95, category: "Craft Tools" },
            { name: "Angle Brushes, Silicone Grip, 4 ct", quantity: 28656, unitCost: 0.88, category: "Brushes" }
        ];

        let currentSort = 'default';
        let currentFilterCategory = 'all';

        // Function to calculate pricing tiers
        function calculatePricingTiers(unitCost, totalQuantity) {
            // Define percentage thresholds for tiers
            const tier1QtyThreshold = Math.ceil(totalQuantity * 0.10); // Up to 10%
            const tier2QtyThreshold = Math.ceil(totalQuantity * 0.50); // Up to 50%

            // Define pricing multipliers based on reduced price percentages
            // Tier 1: 50% reduced price = 50% of original cost
            const tier1Price = (unitCost * 0.50).toFixed(2);
            // Tier 2: 70% reduced price = 30% of original cost
            const tier2Price = (unitCost * 0.30).toFixed(2);
            // Tier 3: 90% reduced price = 10% of original cost
            const tier3Price = (unitCost * 0.10).toFixed(2);

            return [
                { range: `1 - ${tier1QtyThreshold.toLocaleString()} units`, price: `$${tier1Price}` },
                { range: `${(tier1QtyThreshold + 1).toLocaleString()} - ${tier2QtyThreshold.toLocaleString()} units`, price: `$${tier2Price}` },
                { range: `${(tier2QtyThreshold + 1).toLocaleString()}+ units`, price: `$${tier3Price}` }
            ];
        }

        // Function to filter and sort products
        function getFilteredAndSortedProducts() {
            let productsToRender = [...rawProductData]; // Start with a copy of the original data

            // Apply filter
            if (currentFilterCategory !== 'all') {
                productsToRender = productsToRender.filter(product => product.category === currentFilterCategory);
            }

            // Apply sort
            switch (currentSort) {
                case 'unitPriceAsc':
                    productsToRender.sort((a, b) => a.unitCost - b.unitCost);
                    break;
                case 'unitPriceDesc':
                    productsToRender.sort((a, b) => b.unitCost - a.unitCost);
                    break;
                case 'quantityAsc':
                    productsToRender.sort((a, b) => a.quantity - b.quantity);
                    break;
                case 'quantityDesc':
                    productsToRender.sort((a, b) => b.quantity - a.quantity);
                    break;
                case 'default':
                default:
                    // Maintain original order or a consistent default (e.g., by name)
                    productsToRender.sort((a, b) => a.name.localeCompare(b.name));
                    break;
            }
            return productsToRender;
        }

        // Function to display products
        function renderProducts() {
            const productListDiv = document.getElementById('product-list');
            productListDiv.innerHTML = ''; // Clear previous content

            const productsToDisplay = getFilteredAndSortedProducts();

            if (productsToDisplay.length === 0) {
                productListDiv.innerHTML = '<p class="text-center text-gray-600 text-xl col-span-full">No products found matching your criteria.</p>';
                return;
            }

            productsToDisplay.forEach(product => {
                const tiers = calculatePricingTiers(product.unitCost, product.quantity);
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <h3 class="text-2xl font-semibold text-gray-900 mb-3">${product.name}</h3>
                    <p class="text-gray-600 mb-2">Available Quantity: <span class="font-bold">${product.quantity.toLocaleString()}</span> units</p>
                    <p class="text-sm text-gray-500 mb-4">(Approx. Original Unit Cost: $${product.unitCost.toFixed(2)})</p>
                    
                    <div class="mb-4">
                        <h4 class="text-lg font-medium text-gray-800 mb-2">Wholesale Pricing:</h4>
                        <ul class="list-disc list-inside text-gray-700 space-y-1 pl-4">
                            ${tiers.map(tier => `<li>${tier.range}: <span class="font-bold text-blue-700">${tier.price} / unit</span></li>`).join('')}
                        </ul>
                    </div>
                    
                    <button onclick="showSection('contact')" class="mt-auto bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded-md transition-colors duration-300">
                        Inquire About This Product
                    </button>
                `;
                productListDiv.appendChild(productCard);
            });
        }

        // Function to populate category filter dropdown
        function populateCategoryFilter() {
            const filterSelect = document.getElementById('filter-category');
            filterSelect.innerHTML = '<option value="all">All Categories</option>'; // Reset

            const categories = [...new Set(rawProductData.map(p => p.category))].sort();
            categories.forEach(category => {
                const option = document.createElement('option');
                option.value = category;
                option.textContent = category;
                filterSelect.appendChild(option);
            });
        }

        // Function to switch sections and update active navigation link
        function showSection(sectionId) {
            // Hide all content sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.add('hidden');
            });

            // Show the requested section
            document.getElementById(sectionId).classList.remove('hidden');

            // Update active navigation link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            document.querySelector(`.nav-link[href="#${sectionId}"]`).classList.add('active');

            // If products section, render products and populate filters
            if (sectionId === 'products') {
                populateCategoryFilter(); // Ensure categories are up-to-date
                renderProducts(); // Render with current sort/filter settings
            } else if (sectionId === 'home') {
                renderScrollingProducts(); // Render scrolling products on home page
            }
        }

        // Function to render the scrolling product items on the home page
        function renderScrollingProducts() {
            const scrollingWrapper = document.getElementById('scrolling-products-wrapper');
            if (!scrollingWrapper) return;

            scrollingWrapper.innerHTML = ''; // Clear previous content

            // Take a subset of products for the scrolling display (e.g., first 6 or a random selection)
            const productsForScroll = rawProductData.slice(0, 8); // Example: first 8 products

            // Create the content for the scrolling wrapper
            let contentHtml = '';
            productsForScroll.forEach(product => {
                // Get the lowest price tier for display in the scroller
                const lowestPrice = calculatePricingTiers(product.unitCost, product.quantity)[2].price;
                contentHtml += `
                    <div class="scrolling-product-item">
                        <p class="text-base font-semibold text-gray-900">${product.name}</p>
                        <p class="text-sm text-gray-600 mt-1">Starting from <span class="font-bold text-blue-700">${lowestPrice}</span> / unit</p>
                    </div>
                `;
            });

            // Duplicate the content to create a seamless loop
            scrollingWrapper.innerHTML = contentHtml + contentHtml;
        }


        // Event Listeners for Filter and Sort
        document.addEventListener('DOMContentLoaded', () => {
            const sortBySelect = document.getElementById('sort-by');
            const filterCategorySelect = document.getElementById('filter-category');
            const resetFiltersButton = document.getElementById('reset-filters');

            if (sortBySelect) {
                sortBySelect.addEventListener('change', (event) => {
                    currentSort = event.target.value;
                    renderProducts();
                });
            }

            if (filterCategorySelect) {
                filterCategorySelect.addEventListener('change', (event) => {
                    currentFilterCategory = event.target.value;
                    renderProducts();
                });
            }

            if (resetFiltersButton) {
                resetFiltersButton.addEventListener('click', () => {
                    currentSort = 'default';
                    currentFilterCategory = 'all';
                    if (sortBySelect) sortBySelect.value = 'default';
                    if (filterCategorySelect) filterCategorySelect.value = 'all';
                    renderProducts();
                });
            }

            // Initialize the page by showing the home section on load
            showSection('home');
        });
    </script>
</body>
</html>
