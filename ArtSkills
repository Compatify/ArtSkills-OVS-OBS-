        }

        .scrolling-products-wrapper {
            display: flex;
            animation: scrollProducts 40s linear infinite; /* Adjust duration for speed */
            /* Ensure content takes up minimal height and doesn't wrap */
            white-space: nowrap;
            will-change: transform; /* Optimize for animation */
        }

        .scrolling-product-item {
            flex: 0 0 auto; /* Prevent items from shrinking/growing */
            width: 250px; /* Fixed width for each item */
            margin-right: 2rem; /* Spacing between items */
